{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "extends": [
    "react-app",
    "airbnb",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react",
    "plugin:react/recommended"
  ],
  "plugins": ["jsx-a11y", "prettier", "react"],
  "rules": {
    "semi": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prefer-es6-class": 0,
    "react/prop-types": [1],
    "react/no-array-index-key": [1],
    "func-names": "off",
    "no-console": "off",
    "no-use-before-define": [1],
    "no-param-reassign": [1],
    "import/prefer-default-export": "off",
    "no-shadow": [1],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "react/forbid-prop-types": "off",

    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "printWidth": 85,
        "arrowParens": "always",
        "tabWidth": 2
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detetect"
    }
  }
}
